---
layout: base.njk
---
{# TODO: convert links/*.njk to json #}
<section class="link-container">

    {% for links in collections.links | sort(false, false, 'templateContent') %}

    <a id="{{ links.data.page.fileSlug }}" class="links box-shadow" href="{{ links.data.linkurl }}"
        title="{{ links.data.linkurl }}">
        {% for card in trello %}
        {% if card.labels[0].name === links.data.name%}
        <span class="theme-{{ links.data.color }} box-shadow text-small"> {{card.desc | safe}} </span>
        {% endif %}
        {% endfor %}
        <h2>
            <picture>
                <source srcset="./assets/img/{{ links.data.page.fileSlug }}-logow.webp"
                    media="(prefers-color-scheme:dark)">
                <img src="./assets/img/{{ links.data.page.fileSlug }}-logo.webp" alt="shop on {{ links.data.name }}"
                    width="256" height="200" />
            </picture>
        </h2>
    </a>

    {% endfor %}

</section>